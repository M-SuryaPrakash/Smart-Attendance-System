<%- include('partials/header'); -%>


    <div class="container p-0" style="border-radius: 10px;">
        <table class="table table-hover table-striped table-borderless">
            <thead style="background-color: #0d6dfdd0; color: white; border: 1px solid blue; border-radius: 50px;">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Attendance Status</th>
                    <th scope="col">In Time</th>
                    <th scope="col">Out Time</th>
                </tr>
            </thead>

            <tbody>

                <% Items.forEach(function (item){ %>
                    <tr>
                        <th scope="row"><%= item.id %></th>
                        <td><%= item.StudentName %></td>
                        <td>
                            <% if(item.AttendanceStatus === "present"){ %>
                                <span style="color: green;font-weight: bold;">✓ </span><%= item.AttendanceStatus %>
                            <% }else{ %>
                                <span style="color: red;font-weight: bold;">✗ </span><%= item.AttendanceStatus %>
                            <% } %>
                        </td>
                        <td><%= item.InTime %></td>
                        <td><%= item.OutTime %></td>
                    </tr>
                <% }) %>

            </tbody>
        </table>
    </div>


    <%- include('partials/footer'); -%>